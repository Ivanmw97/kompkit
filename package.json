{
  "name": "kompkit",
  "version": "0.1.0",
  "description": "A lightweight cross-platform utility kit for Android (Kotlin) and Web (TypeScript): debounce, isEmail, formatCurrency",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "test:web": "lerna run test --scope=@kompkit/core",
    "test:android": "cd packages/core/android && ./gradlew test",
    "test": "npm run test:web && npm run test:android",
    "docs:web": "npm --prefix packages/core/web run docs",
    "docs:android": "cd packages/core/android && ./gradlew copyDokkaToDocs",
    "docs:all": "npm run docs:web && npm run docs:android"
  },
  "keywords": [
    "utilities",
    "cross-platform",
    "typescript",
    "kotlin",
    "android",
    "web"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "lerna": "^8.0.0"
  }
}